\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

	GEngine->AddOnScreenDebugMessage(-1, 5.f, FColor::Green, TEXT("Juego Guardado."))
;
\end_layout

\begin_layout Plain Layout

}
